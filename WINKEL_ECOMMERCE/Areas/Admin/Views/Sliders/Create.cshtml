@model Slider
<div class="mb-5">
    <a asp-area="Admin" asp-controller="Sliders" asp-action="Index" class="btn btn-outline-primary btn-lg d-block">
        <i class="material-icons">
            arrow_back
        </i>
        BACK TO LIST
    </a>
 </div>

 <form method="post" enctype="multipart/form-data">
     <div class="form-group">
         <label asp-for="LeftVerticalText"></label>
         <input asp-for="LeftVerticalText" class="form-control"/>
         <span asp-validation-for="LeftVerticalText" class="text-danger"></span>
     </div>
     <div class="form-group">
         <label asp-for="SupHeader"></label>
         <input asp-for="SupHeader" class="form-control"/>
         <span asp-validation-for="SupHeader" class="text-danger"></span>
     </div>
     <div class="form-group">
         <label asp-for="Header"></label>
         <input asp-for="Header" class="form-control"/>
         <span asp-validation-for="Header" class="text-danger"></span>
     </div>
     <div class="form-group">
         <label asp-for="Description"></label>
         <textarea asp-for="Description" class="form-control"></textarea>
         <span asp-validation-for="Description" class="text-danger"></span>
     </div>
     <div class="form-group">
         <label asp-for="AltImage"></label>
         <input asp-for="AltImage" class="form-control"/>
         <span asp-validation-for="AltImage" class="text-danger"></span>
     </div>
     <div class="form-group">
         <label asp-for="Photo"></label>
         <input type="file" accept="image/*" asp-for="Photo" class="form-control"/>
         <span asp-validation-for="Photo" class="text-danger"></span>
     </div>
    <input type="submit" class="btn btn-lg btn-primary" value="CREATE"/>  
 </form>

@section scripts{
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}