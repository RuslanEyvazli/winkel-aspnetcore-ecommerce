@{
}
@model Slider
<dl>
    <dt>Image</dt>
    <dd><img width="200" src="~/image/@Model.Image"/></dd>
    <dt>Left vertical text</dt>
    <dd>@Model.LeftVerticalText</dd>
    <dt>SupHeader</dt>
    <dd>@Model.SupHeader</dd>
    <dt>Header</dt>
    <dd>@Model.Header</dd>
    <dt>Description</dt>
    <dd>@Model.Description</dd>
</dl>
<form method="post">
<div>
    <a class="btn btn-block btn-danger">Are you Sure to Delete This Slide?</a>
    <input class="btn btn-block btn-danger" asp-area="Admin" asp-controller="Sliders" asp-action="Delete" asp-route-id="@Model.Id" type="submit" value="Delete">

</div>
</form>
<a class="btn btn-block btn-outline-success"  asp-area="Admin" asp-controller="Sliders" asp-action="Index">Back to Index</a>
