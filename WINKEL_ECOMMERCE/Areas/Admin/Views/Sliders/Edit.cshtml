@{
}
@model Slider

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label class="form-label">Currently Active Image : @Model.Image</label>
        <br />
        <img src="~/image/@Model.Image" width="75"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Photo" class="form-label"></label>
        <input asp-for="@Model.Photo" type="file" accept="image/*" class="form-control"/>
        <span asp-validation-for="@Model.Photo"></span>
    </div>  
    <div class="form-group">
        <label asp-for="@Model.AltImage" class="form-label"></label>
        <input asp-for="@Model.AltImage" class="form-control"/>
        <span asp-validation-for="@Model.AltImage"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.LeftVerticalText" class="form-label"></label>
        <input asp-for="@Model.LeftVerticalText" class="form-control"/>
        <span asp-validation-for="@Model.LeftVerticalText"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.SupHeader" class="form-label"></label>
        <input asp-for="@Model.SupHeader" class="form-control"/>
        <span asp-validation-for="@Model.SupHeader"></span>
    </div>    
    <div class="form-group">
        <label asp-for="@Model.Header" class="form-label"></label>
        <input asp-for="@Model.Header" class="form-control"/>
        <span asp-validation-for="@Model.Header"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Description" class="form-label"></label>
        <input asp-for="@Model.Description" class="form-control"/>
        <span asp-validation-for="@Model.Description"></span>
    </div>
    <input type="submit" class="btn btn-block btn-lg btn-primary" value="Update"/>
</form>
<div class="mb-5">
    <a asp-area="Admin" asp-controller="Sliders" asp-action="Index" class="btn btn-outline-primary btn-lg d-block">
        <i class="material-icons">
            arrow_back
        </i>
        BACK TO LIST
    </a>
 </div>
        
@section scripts{
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}