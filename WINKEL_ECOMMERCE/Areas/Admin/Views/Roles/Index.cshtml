@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<div class="">
<a asp-area="Admin" asp-controller="Roles" asp-action="Create" class="btn btn-outline-primary btn-lg d-block">
    CREATE NEW Roles
    <i class="material-icons">
        add
    </i>
</a>
 </div>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Microsoft.AspNetCore.Identity.IdentityRole role in Model)
        {
            <tr>

                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a asp-area="Admin" asp-controller="Roles" asp-action="Details" asp-route-id="@role.Id" class="btn btn-success">
                        <i class="material-icons">
                            remove_red_eye
                        </i>
                    </a>
                    <a asp-area="Admin" asp-controller="Roles" asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning">
                        <i class="material-icons">
                            edit
                        </i>
                    </a> 
                    @if (role.Name != "Admin")
                    {
                        <a asp-area="Admin" asp-controller="Roles" asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger">
                            <i class="material-icons">
                                delete
                            </i>
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
