@{
}
@model Post
<div class="container">
<div class="row">
    <div class="col-md-6 offset-md-3">
            <h2>Create New Post</h2>
        <div asp-validation-summary="ModelOnly"></div>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="form-label" asp-for="@Model.Header"></label>
                <input class="form-control" asp-for="@Model.Header"/>
                    <span class ="text-danger" asp-validation-for="Header"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="@Model.Content"></label>
                <textarea class="form-control" asp-for="@Model.Content" rows="10"></textarea>
                    <span class="text-danger" asp-validation-for="Content"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="@Model.Photo"></label>
                <input accept="image/*" type="file" class="form-control" asp-for="@Model.Photo" />
                <span class="text-danger" asp-validation-for="Photo"></span>
            </div>
            <input class="btn btn-lg btn-submit btn-success btn-block" type="submit" value="Create Post"/>
        </form>
    </div>
</div>
</div>
@section scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}